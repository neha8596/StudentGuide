<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context="com.example.neha.student_guide.RegisterActivity">


    <TextView
        android:id="@+id/tab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp" />

    <EditText
        android:id="@+id/username"
        android:background="@drawable/login_border"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:ellipsize="start"
        android:gravity="center_vertical"
        android:ems="10"
        android:drawableLeft="@mipmap/ic_iosuser"
        android:hint="Username"
        android:inputType="text"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/tab2"
        android:layout_alignLeft="@+id/pid"
        android:layout_alignStart="@+id/pid" />
    <EditText
        android:id="@+id/pid"
        android:drawableLeft="@mipmap/ic_pid"
        android:background="@drawable/login_border"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:ellipsize="start"
        android:gravity="center_vertical"
        android:ems="10"
        android:layout_marginTop="13dp"
        android:hint="PID"
        android:inputType="number"
        android:layout_below="@+id/username"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/password"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:background="@drawable/login_border"
        android:drawableLeft="@mipmap/ic_password"
        android:ellipsize="start"
        android:gravity="center_vertical"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:layout_below="@+id/pid"
        android:layout_alignLeft="@+id/pid"
        android:layout_alignStart="@+id/pid" />

    <Button
        android:id="@+id/registerButton"

        android:backgroundTint="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="Alreadry Registered? Sign in here"

        android:layout_marginTop="21dp"
        android:layout_below="@+id/registerButton"
        android:layout_centerHorizontal="true"
        android:id="@+id/login" />

</RelativeLayout>
